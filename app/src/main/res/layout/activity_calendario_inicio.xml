<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:elevation="2dp"
    android:padding="12dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/tvTituloFechas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fechas Programadas"
        android:textColor="#388e3c"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"/>

    <!-- Encabezado mes y flechas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvMesAnio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="March 2021"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"/>

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/rounder_backgroundsietedaa"
            android:src="@drawable/ic_arrow_left"
            android:scaleType="center"
            android:contentDescription="Anterior"
            android:layout_marginEnd="6dp"
            android:padding="6dp"
            android:tint="#388e3c"/>
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/rounder_backgroundsietedaa"
            android:src="@drawable/ic_arrow_right"
            android:scaleType="center"
            android:contentDescription="Siguiente"
            android:padding="6dp"
            android:tint="#388e3c"/>
    </LinearLayout>

    <!-- Tabla de calendario -->
    <TableLayout
        android:id="@+id/tableCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="8dp"
        android:background="#fff">

        <TableRow>
            <TextView android:text="Mo" style="@style/CalendarDayHeader" />
            <TextView android:text="Tu" style="@style/CalendarDayHeader" />
            <TextView android:text="We" style="@style/CalendarDayHeader" />
            <TextView android:text="Th" style="@style/CalendarDayHeader" />
            <TextView android:text="Fr" style="@style/CalendarDayHeader" />
            <TextView android:text="Sa" style="@style/CalendarDayHeader" />
            <TextView android:text="Su" style="@style/CalendarDayHeader" />
        </TableRow>
        <TableRow>
            <TextView android:text="1" style="@style/CalendarDay" />
            <TextView android:text="2" style="@style/CalendarDaySelected" />
            <TextView android:text="3" style="@style/CalendarDaySelected" />
            <TextView android:text="4" style="@style/CalendarDaySelected" />
            <TextView android:text="5" style="@style/CalendarDaySelected" />
            <TextView android:text="6" style="@style/CalendarDay" />
            <TextView android:text="7" style="@style/CalendarDay" />
        </TableRow>
        <TableRow>
            <TextView android:text="8" style="@style/CalendarDay" />
            <TextView android:text="9" style="@style/CalendarDay" />
            <TextView android:text="10" style="@style/CalendarDay" />
            <TextView android:text="11" style="@style/CalendarDay" />
            <TextView android:text="12" style="@style/CalendarDay" />
            <TextView android:text="13" style="@style/CalendarDay" />
            <TextView android:text="14" style="@style/CalendarDay" />
        </TableRow>
        <TableRow>
            <TextView android:text="15" style="@style/CalendarDay" />
            <TextView android:text="16" style="@style/CalendarDay" />
            <TextView android:text="17" style="@style/CalendarDay" />
            <TextView android:text="18" style="@style/CalendarDay" />
            <TextView android:text="19" style="@style/CalendarDay" />
            <TextView android:text="20" style="@style/CalendarDay" />
            <TextView android:text="21" style="@style/CalendarDay" />
        </TableRow>
        <TableRow>
            <TextView android:text="22" style="@style/CalendarDay" />
            <TextView android:text="23" style="@style/CalendarDay" />
            <TextView android:text="24" style="@style/CalendarDay" />
            <TextView android:text="25" style="@style/CalendarDay" />
            <TextView android:text="26" style="@style/CalendarDay" />
            <TextView android:text="27" style="@style/CalendarDay" />
            <TextView android:text="28" style="@style/CalendarDay" />
        </TableRow>
        <TableRow>
            <TextView android:text="29" style="@style/CalendarDay" />
            <TextView android:text="30" style="@style/CalendarDay" />
            <TextView android:text="31" style="@style/CalendarDay" />
            <TextView android:text="" style="@style/CalendarDay" />
            <TextView android:text="" style="@style/CalendarDay" />
            <TextView android:text="" style="@style/CalendarDay" />
            <TextView android:text="" style="@style/CalendarDay" />
        </TableRow>
    </TableLayout>
</LinearLayout> 