<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/LinearHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/LinearBotonessuperiores"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnDrawerUser"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:src="@drawable/usuario"
                android:contentDescription="Imagen de usuario"
                android:padding="0dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibtnoti"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/transparent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/notifiacion" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LinearTextoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvsaludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola, "
                    android:textColor="#65a55f"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvnombresaludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#65a55f"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ðŸ‘‹"
                    android:textSize="42sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tu salud en buenas manos"
                android:layout_marginStart="35dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <!-- SecciÃ³n CampaÃ±as -->
        <LinearLayout
            android:id="@+id/linearCampanas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerCampanas"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="16dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:overScrollMode="never" />

        </LinearLayout>

        <!-- SecciÃ³n Citas -->
        <TextView
            android:id="@+id/tvTituloCitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Citas"
            android:textColor="#4CAF1C"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            />

        <include layout="@layout/item_cita" />

        <!-- Calendario incluido -->
        <include layout="@layout/activity_calendario_inicio" />

    </LinearLayout>
</ScrollView>