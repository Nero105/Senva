<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#ecf3eb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ecf3eb"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgDoctor"
            android:layout_width="60dp"
            android:layout_height="54dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Foto doctor"
            android:scaleType="centerCrop"
            android:src="@drawable/doc_inicio" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNombreDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="DRA. RAMÍREZ"
                    android:textColor="#41758C"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEspecialidadDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="sans-serif"
                    android:text="( Cardióloga )"
                    android:textColor="#41758CBD"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/tvVerMas"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:backgroundTint="#41758CC9"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Ver más"
                android:textAllCaps="true"
                android:textColor="#3A5A7A"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgFlecha"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="Flecha"
            android:src="@drawable/ic_arrow_drop_down"
            android:tint="@color/gray" />
    </LinearLayout>

</androidx.cardview.widget.CardView>